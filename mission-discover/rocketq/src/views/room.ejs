<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Rocket.Q - Perguntas e Respostas</title>

        <!-- Estilos da página -->
        <link rel="stylesheet" href="/styles/global.css">
        <link rel="stylesheet" href="/styles/room.css">
        <link rel="stylesheet" href="/styles/modal.css">

        <!-- Estilos de fontes -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    </head>

    <body>
        <div id="room" class="content">
            <header>
                <a href="/">
                    <img src="/images/logo.svg" alt="Rocket.Q logo">
                </a>

                <div class="buttons">
                    
                    <div class="button outlined" id="room-id" data-id="<%= roomId %>">
                        #<%= roomId %>
                        <img src="/images/copy.svg" alt="Copiar número da sala">
                    </div>

                    <a href="/create-pass" class="button">
                        <img src="/images/users-white.svg" alt="Criar uma sala">
                        Criar Sala
                    </a>
                </div>
            </header>

            <main>
                <section id="question-form">
                    <h2>Faça sua pergunta</h2>
                    <form action="/question/create/<%= roomId %>" method="POST">
                        <label for="question" class="sr-only">O que você quer perguntar?</label>
                        <textarea name="question" id="question" placeholder="O que você quer perguntar?"></textarea>

                        <footer>
                            <div>
                                <img src="/images/lock.svg" alt="Cadeado">
                                Esta pergunta é anônima
                            </div>

                            <button>Enviar</button>
                        </footer>
                    </form>
                </section>

                <section id="questions">
                    <h2 class="sr-only">Perguntas da comunidade</h2>
                    <div class="questions">

                        <% if (isNoQuestions) { %>
                            <%- include('parts/no-question') %>
                        <% } %>
 
                        <% questions.forEach(question => { %>
                            <div class="question-wrapper">
                                <div class="question-content">
                                    <div class="user">
                                        <img src="/images/user.svg" alt="Imagem do questionador">
                                    </div>
                                    <div class="question">
                                        <p><%= question.title %></p>
                                    </div>
                                </div>
    
                                <div class="actions">
                                    <a href="#" class="check" data-id="<%= question.id %>">
                                        <img src="/images/check.svg" alt="Imagem do botão Marcar como lida">
                                        Marcar como lida
                                    </a>
    
                                    <a href="#" class="trash" data-id="<%= question.id %>">
                                        <img src="/images/trash.svg" alt="Imagem do botão Excluir">
                                        Excluir
                                    </a>
                                </div>
                            </div>
                        <% }); %>

                        <% questionsRead.forEach(questionRead => { %>
                            <div class="question-wrapper read">
                                <div class="question-content">
                                    <div class="user">
                                        <img src="/images/user.svg" alt="Imagem do questionador">
                                    </div>
                                    <div class="question">
                                        <p><%= questionRead.title %></p>
                                    </div>
                                </div>

                                <div class="actions">
                                    <a href="#" class="trash" data-id="<%= questionRead.id %> ">
                                        <img src="/images/trash.svg" alt="Imagem do botão Excluir">
                                        Excluir
                                    </a>
                                </div>
                            </div>
                        <% }); %>

                    </div>
                </section>
            </main>
        </div>

        <!-- Modal -->
        <div class="modal-wrapper">
            <div class="modal">
                <h2>Excluir Pergunta!!</h2>
                <p>Tem certeza que você deseja excluir esta pergunta?</p>

                <form action="#" method="POST">
                    <label for="password" class="sr-only">Digite sua senha admin</label>
                    <input type="password" id="password" name="password" placeholder="Digite sua senha">

                    <div class="buttons">
                        <div class="button gray cancel">Cancelar</div>
                        <button class="red">Sim, excluir</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Scripts -->
        <script src="/scripts/main.js" defer type="module"></script>
    </body>
</html>